{
    "name": "BetterMaplewood",
    "description": "BetterMaplewood, a browser extension to make your maplewood experience better",
    "version": "2.5.1",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://hosting.maplewood.com/*/main.aspx*"
            ],
            "js": [
                "injector.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "src/averageCalculator.js",
        "src/loadMarkbook.js",
        "src/liveMarkbookCalculator.js",
        "src/percentages.js",
        "src/betterTableLayout.js",
        "src/selectors.js",
        "src/fixBgColor.js"
    ],
    "browser_action": {
        "default_title": "BetterMaplewood",
        "default_popup": "src/popup.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "96": "img/icon96.png",
        "128": "img/icon128.png",
        "196": "img/icon196.png"
    },
    "manifest_version": 2
}
